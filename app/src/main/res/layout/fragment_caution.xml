<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_caution_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_caution_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center"
        android:layout_marginBottom="36dp"
        android:text="@string/bluetooth_is_off"
        android:textColor="@color/caution_text"
        android:textSize="16sp" />

    <RelativeLayout
        android:id="@+id/rl_active_bluetooth_btn_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_turn_on_bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@color/design_default_color_primary_dark"
            android:padding="8dp"
            android:text="@string/turn_on_bluetooth"
            android:textColor="@color/white" />

        <ProgressBar
            android:id="@+id/pb_turn_on_bluetooth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>